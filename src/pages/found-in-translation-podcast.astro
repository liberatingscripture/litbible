---
import Layout from "../layouts/Layout.astro";
import "../styles/pages/found-in-translation-podcast.css";

// Update these paths to match what’s in /public/images/
const heroImage = "/images/scopio-0b189831-4e0b-46c8-a758-c743663d7611.webp";
const coverImage = "/images/fit-cover.webp";
---

<Layout title="Found in Translation Podcast | The LIT">
  <main class="fit-page">
    <!-- HERO -->
    <section class="fit-hero" aria-label="Found in Translation hero">
      <img
        class="fit-hero__bg"
        src={heroImage}
        alt=""
        width="1920"
        height="1080"
        loading="eager"
        decoding="async"
      />

      <div class="fit-hero__content">
        <h1 class="fit-hero__title">Found in Translation</h1>
        <p class="fit-hero__subtitle">
          armchair bible banter for liberation and healing
        </p>
        <p class="fit-hero__byline">
          with Brandon Vélez Johnson and Brandon Rhodes
        </p>
      </div>
    </section>

    <!-- COVER + PLATFORMS -->
    <section class="fit-platforms" aria-label="Listen on podcast platforms">
      <div class="fit-cover-wrap">
        <img
          class="fit-cover"
          src={coverImage}
          alt="Found in Translation podcast cover"
          width="600"
          height="600"
          loading="lazy"
          decoding="async"
        />
      </div>

      <div class="fit-platform-links">
        <a
          class="fit-platform fit-platform--apple"
          href="https://podcasts.apple.com/us/podcast/found-in-translation/id1586737797"
          target="_blank"
          rel="noopener"
        >
          Apple Podcasts
        </a>
        <a
          class="fit-platform fit-platform--spotify"
          href="https://open.spotify.com/show/6S2wWaM5oqknwncPfOEyZ6"
          target="_blank"
          rel="noopener"
        >
          Spotify
        </a>
        <a
          class="fit-platform fit-platform--youtube"
          href="https://www.youtube.com/@foundintranslationpodcast"
          target="_blank"
          rel="noopener"
        >
          YouTube
        </a>
      </div>
    </section>

    <!-- LATEST -->
    <section
      class="fit-section fit-section--green"
      aria-label="Latest episodes"
    >
      <h2 class="fit-h2">Latest Episodes</h2>

      <div class="fit-embed fit-embed--apple" aria-label="Apple Podcasts embed">
        <iframe
          id="embedPlayer"
          src="https://embed.podcasts.apple.com/us/podcast/found-in-translation/id1586737797?itsct=podcast_box_player&itscg=30200&ls=1&theme=auto"
          height="450"
          frameborder="0"
          sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation-by-user-activation"
          allow="autoplay *; encrypted-media *; clipboard-write"
          loading="lazy"
          title="Found in Translation on Apple Podcasts"></iframe>
      </div>

      <div class="fit-embed-grid">
        <div class="fit-embed" aria-label="YouTube embed">
          <iframe
            src="https://www.youtube.com/embed/PJNPyB1swZ0?si=oW1rXQdX05Z_J5lH"
            title="Found in Translation on YouTube"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
            loading="lazy"></iframe>
        </div>

        <div class="fit-embed" aria-label="Spotify embed">
          <iframe
            src="https://open.spotify.com/embed/show/6S2wWaM5oqknwncPfOEyZ6?utm_source=generator&theme=0"
            frameborder="0"
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"
            title="Found in Translation on Spotify"></iframe>
        </div>
      </div>
    </section>

    <!-- ESSENTIAL / FAVORITES -->
    <section
      class="fit-section fit-section--cream fit-episodes"
      aria-labelledby="fit-essentials"
    >
      <div class="fit-episodes__inner">
        <h2 id="fit-essentials" class="fit-episodes__kicker">
