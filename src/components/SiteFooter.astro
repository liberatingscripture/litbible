---
import { siFacebook, siThreads, siBluesky, siInstagram } from "simple-icons";
---

<footer class="site-footer">
  <div class="footer-inner">
    <div class="footer-left">
      <nav class="footer-nav" aria-label="Footer navigation">
        <div class="footer-col">
          <h2>Learn</h2>
          <ul>
            <li><a href="/about">About</a></li>
            <li><a href="/translation-commitments">Commitments</a></li>
            <li><a href="/found-in-translation-podcast">Podcast</a></li>
            <li><a href="/courses">Courses</a></li>
          </ul>
        </div>

        <div class="footer-col">
          <h2>Connect</h2>
          <ul>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/support">Support</a></li>
          </ul>

          <ul class="social-links" aria-label="Social media">
            <li>
              <a
                href="https://www.facebook.com/LiberationAndInclusionTranslation"
                aria-label="Liberation and Inclusion Translation on Facebook"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="sr-only">Facebook (LIT)</span>
                <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                  <path d={siFacebook.path}></path>
                </svg>
              </a>
            </li>

            <li>
              <a
                href="https://threads.net/lit.bible"
                aria-label="Liberation and Inclusion Translation on Threads"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="sr-only">Threads</span>
                <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                  <path d={siThreads.path}></path>
                </svg>
              </a>
            </li>

            <li>
              <a
                href="https://bsky.app/profile/litbible.net"
                aria-label="Liberation and Inclusion Translation on Bluesky"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="sr-only">Bluesky</span>
                <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                  <path d={siBluesky.path}></path>
                </svg>
              </a>
            </li>

            <li>
              <a
                href="https://instagram.com/lit.bible"
                aria-label="Liberation and Inclusion Translation on Instagram"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="sr-only">Instagram</span>
                <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                  <path d={siInstagram.path}></path>
                </svg>
              </a>
            </li>

            <li>
              <a
                href="https://www.facebook.com/FoundinTranslationPodcast"
                aria-label="Found in Translation Podcast on Facebook"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="sr-only">Facebook (Found in Translation)</span>
                <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                  <path d={siFacebook.path}></path>
                </svg>
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <div class="footer-center" aria-label="Site logo">
      <img
        src="/images/lit-logo.png"
        alt="Liberation and Inclusion Translation logo"
        width="220"
        height="220"
      />
    </div>

    <div class="footer-right">
      <a href="/read" class="footer-cta"><span>Read Now</span></a>

      <p class="license">
        The <strong
          >Liberation and Inclusion Translation of the Bible (LIT)</strong
        >™ © 2025 by Brandon C. Vélez Johnson is licensed under
        <a
          href="https://creativecommons.org/licenses/by-nc-nd/4.0/"
          rel="license noopener noreferrer"
          target="_blank"
        >
          CC BY-NC-ND 4.0
        </a>
      </p>
    </div>
  </div>
</footer>
